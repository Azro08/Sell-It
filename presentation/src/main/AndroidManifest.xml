<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.SellItApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/sell_it_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_configs"
        android:roundIcon="@drawable/sell_it_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.SellIt"
        tools:targetApi="31">
        <activity
            android:name=".shared.splash_screen.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".admin.AdminActivity"
            android:exported="false" />
        <activity
            android:name=".shared.auth.AuthActivity"
            android:exported="false" />
        <activity
            android:name=".users.MainActivity"
            android:exported="false">
        </activity>
    </application>

</manifest>